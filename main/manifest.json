{
  "name": "Xyfir Buttons",
  "short_name": "xyButtons",
  "description": "A new type of userscript system. Control the web with floating buttons.",
  "version": "2.0.0",
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+B"
      }
    }
  },
  "browser_action": {
    "default_icon": {
      "16": "res/icons/16.png",
      "48": "res/icons/48.png",
      "128": "res/icons/128.png",
      "1024": "res/icons/1024.png"
    },
    "default_title": "Xyfir Buttons",
    "default_popup": "open.html"
  },
  "options_ui": {
    "page": "open.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "run_at": "document_start",
    "js": ["content-script.js"]
  }],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "res/icons/16.png",
    "48": "res/icons/48.png",
    "128": "res/icons/128.png",
    "1024": "res/icons/1024.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "unlimitedStorage",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' https://js.stripe.com; object-src 'self'",
  "web_accessible_resources": [
    "inject.js",
    "inject.css"
  ],
  "applications": {
    "gecko": {
      "id": "buttons@xyfir.com",
      "strict_min_version": "50.0"
    }
  }
}