{
  "name": "xyfir-buttons-client",
  "version": "1.0.0",
  "description": "Xyfir Buttons client application and browser extension",
  "scripts": {
    "build:app": "webpack --colors",
    "build:app-css": "node-sass --output-style compressed styles/style.scss build/style.css",
    "prebuild:extension": "del /Q build\\* & copy extension/*.* build",
    "build:extension": "npm run build:app & npm run build:app-css",
    "postbuild:extension": "@powershell Add-Type -A System.IO.Compression.FileSystem; [IO.Compression.ZipFile]::CreateFromDirectory('build', 'build/ext.zip')"
  },
  "author": "Xyfir, LLC <contact@xyfir.com> (https://xyfir.com/)",
  "license": "ISC",
  "dependencies": {
    "chrome-promise": "^2.0.2",
    "moment": "^2.17.1",
    "react": "^15.4.2",
    "react-addons-css-transition-group": "^15.4.2",
    "react-addons-transition-group": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-md": "^1.0.5",
    "react-router": "^3.0.2",
    "superagent": "^3.4.3"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2016": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "node-sass": "^4.5.0",
    "webpack": "^2.2.1"
  }
}
