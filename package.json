{
  "name": "xyfir-buttons-client",
  "version": "1.0.0",
  "description": "Xyfir Buttons client application and browser extension",
  "scripts": {
    "build:app": "webpack --colors",
    "build:app-css": "node-sass --output-style compressed main/app.scss build/app.css",
    "build:inject-css": "node-sass --output-style compressed main/inject.scss build/inject.css",
    "prebuild:extension": "rm -rf build/*; cp main/* build; cp -r res build/res",
    "build:extension": "npm run build:app & npm run build:app-css & npm run build:inject-css",
    "postbuild:extension": "cd build; zip -r build.zip *"
  },
  "author": "Xyfir, LLC <contact@xyfir.com> (https://xyfir.com/)",
  "license": "MIT",
  "dependencies": {
    "brace": "^0.9.1",
    "chrome-promise": "^2.0.2",
    "moment": "^2.17.1",
    "react": "^15.4.2",
    "react-ace": "^4.1.5",
    "react-addons-css-transition-group": "^15.4.2",
    "react-addons-transition-group": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-md": "^1.0.5",
    "react-router": "^3.0.2",
    "superagent": "^3.4.4"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2016": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "node-sass": "^4.5.0",
    "webpack": "^2.2.1"
  }
}
